<h1>Blog Posts</h1>


<% @posts.each do |post| %>
  <div class="post">
  
    <h2><%= link_to post.title, post %></h2>
    <p>
    <%= post.author %>
    created at 
    <%= time_ago_in_words post.created_at %> ago.
    <p>
    <div class="excerpt">
      <%= truncate_html markdown(post.content) %>

    </div>
  </div>
  <hr />
<% end %>


<div id="pagination">
<%= will_paginate @posts, previous_label: h("<"), next_label: h(">") %>
</div>


<hr />
<%= link_to 'New Post', new_post_path %>


